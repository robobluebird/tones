<% width = '1em' unless width %>
<% xtraStyle = '' unless xtraStyle %>
<% _id = '' unless _id %>
<% klass = nil unless klass %>
<% data_color = '' unless data_color %>
<% if url %>
  <a class="noStyle<%= " #{klass}" if klass %>" data-color="<%= data_color %>" id="<%= _id %>" href="<%= url %>">
    <div style="display: inline-block;<%= xtraStyle %>" class="minilookContainer">
      <input type="hidden" value="<%= look %>" />
      <div class="minilook" style="width: <%= width %>">
        <% (16 * 16).times do |i| %><div class="lookCell"><div class="lookCellHeight"></div></div><% end %>
      </div>
    </div>
  </a>
<% else %>
  <div style="display: inline-block;<%= xtraStyle %>" class="minilookContainer">
    <input type="hidden" value="<%= look %>" />
    <div class="minilook" style="width: <%= width %>">
      <% (16 * 16).times do |i| %><div class="lookCell"><div class="lookCellHeight"></div></div><% end %>
    </div>
  </div>
<% end %>
